<core:FragmentDefinition id ="dataStartOrderScanToolsCheck"  xmlns="sap.m" xmlns:com="sap.ui.commons"  xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact">
    <Dialog title="Validación de Herramientas" id="oDialogStep1" contentHeight="85%" contentWidth="50%" afterClose="onCloseDialogStep1">
        <VBox width="100%" height="100%">




	<VBox width="100%" direction="Column" class="sapUiSmallMarginBottom">
	       <items>
          			  <HBox width="100%"  justifyContent="Center" alignContent="Center" >
 				<items>
				 	<HBox width="50%"  justifyContent="Center" alignContent="Center" >
 						 <Image class="sapUiSmallMarginBegin" width="100%" src = "/XMII/CM/demo/App/images/TOOL001.jpg" />
 					</HBox>
				 	<HBox width="50%" justifyContent="Center" alignContent="Center" >
				     	 	      <com:TextArea  id="oInstructions" value="Escanear etiqueta que confirme que el equipo este activo y/o no expirado, que la calibración este vigente" width="100%" height="100px" textDirection="LTR" rows="3"/>
 			 		</HBox>
				</items>
 			</HBox>

	       </items>
	</VBox> 

	<VBox width="100%" direction="Column" class="sapUiSmallMarginBottom">
	       <items>
		<Label text="SFC Barcode"    width="100%" design="Bold" class="sapUiTinyMarginEnd"/>
		<Input id="oSFCLabel" width="70%"   liveChange="onChangeBarcodeValue" value="0000042972-001"   />

	       </items>
	</VBox> 

	<HBox width="100%" direction="Column" class="sapUiSmallMarginBottom">
	       <items>
		<HBox width="100%" direction="Column" class="sapUiSmallMarginBottom">
			<VBox width="100%" direction="Column" class="sapUiSmallMarginBottom">
	   		    <items>
				<Label id="oMsgCalibracion" text="Calibración al día"    width="100%" design="Bold" class="sapUiTinyMarginEnd"/>
				 <core:Icon id="oColorCalibracion"  src = "sap-icon://circle-task-2" size="2em"  color="#00CC00" />
			       </items>
			</VBox> 
		</HBox>
	       </items>
	</HBox> 

        </VBox>
            <endButton>
      <Button
      	id="CreaAviso"
       type="Accept"
         text="Crear Aviso"
         press="onCrearAviso"
         visible="false"/>
    </endButton>
            <beginButton>
      <Button
       type="Accept"
         text="Validar"
         icon="sap-icon://add-product"
         press="onCloseDialogStep1"/>
    </beginButton>
    </Dialog>
</core:FragmentDefinition>
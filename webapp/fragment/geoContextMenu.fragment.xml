<core:FragmentDefinition id ="dataStartOrderScanSFCFragment"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core" class="sapUiSizeCompact">
    <Dialog title="Spot Menu" id="geoContextDialog">


        <HBox width="100%" direction="Column" >
            <Panel>
                <FlexBox renderType="Bare" >
                    <!-- <Image id="mainImg" width="50%" height="50%" class="sapUiSmallMargin">
                        <layoutData>
                            <FlexItemData growFactor="1"></FlexItemData>
                        </layoutData>
                    </Image>-->
                    <Carousel activePage="0" id="carouselImg" class="sapUiSmallMargin" loop="true" width="50%" height="50%">                        
                        <layoutData>
                            <FlexItemData growFactor="0"></FlexItemData>
                        </layoutData>
                        <pages >
                            <Image id="mainImg0" src="" ></Image>
                            <Image id="mainImg1" src="" ></Image>
                        </pages>                        
                    </Carousel>
                    <VBox class="sapUiSmallMargin" >

                        <HBox>
                            <core:Icon src="sap-icon://shortcut" class="sapUiSmallMarginTop" ></core:Icon>
                            <Link id="ubiId" text="Como llegar" href="" target="_blank" class="sapUiSmallMargin"></Link>
                        </HBox>

                        <HBox>
                            <core:Icon src="sap-icon://call" class="sapUiSmallMarginTop" ></core:Icon>
                            <Link id="telId" text="Llamar" href="" target="_blank" class="sapUiSmallMargin"></Link>
                        </HBox>

                        <layoutData>
                            <FlexItemData growFactor="4"></FlexItemData>
                        </layoutData>
                    </VBox>
                    

                </FlexBox>
            </Panel>
        </HBox>

        <endButton>
            <Button id="geoContext" type="Default" text="Cerrar" press="onCloseContextMenu"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition> 
<core:FragmentDefinition xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    height="100%" >
    <Dialog
        class="sapUiResponsiveMargin"
        id="videoDetailDialog"
        title="{i18n>imageDetailDialogTitle}">
        <FlexBox justifyContent="Center" >
            <core:HTML 
            content='&lt;video width=&quot;720&quot; height=&quot;480&quot; controls autoplay&gt;
            &lt;source src=&quot;./images/vdo/paso3.mp4&quot; type=&quot;video/mp4&quot;&gt;
          Your browser does not support the video tag.
          &lt;/video&gt;'>
			</core:HTML>
        </FlexBox>
        <endButton>
            <Button
                id="videoDetail"
                type="Reject"
                text="{i18n>closeButton}"
                press="onCloseDialog" />
        </endButton>
   </Dialog>
</core:FragmentDefinition>
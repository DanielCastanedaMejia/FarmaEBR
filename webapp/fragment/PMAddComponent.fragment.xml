<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
  <Dialog
     id="AddComponentDialog"
     title="{i18n>AddComponent}">
    <l:VerticalLayout
      class="sapUiContentPadding"
      width="100%">
      <l:content>
        <!-- Filter by date range -->
        <Label text="{i18n>Material}"/>
        <ComboBox
                    id="material_addOperation"
                    showSecondaryValues="true">
          <items>
            <core:Item key="250" text="Perno para Troquel"/>
          </items>
        </ComboBox>
        <!-- Filter by plan name(s) -->
        <Label text="{i18n>Quantity}"/>
        <Input
        id="inputQuantity"
				class="sapUiSmallMarginBottom" />        
      </l:content>
    </l:VerticalLayout>

    <beginButton>
      <Button
       type="Emphasized"
         text="{i18n>Add}"
         icon="sap-icon://add"
         press="onCloseDialogAddComponentConfirm"/>
    </beginButton>
    <endButton>
      <Button
         type="Reject"
         text="Cancelar"
         icon="sap-icon://decline"
         press="onCloseDialogAddComponentCancel"/>
    </endButton>

  </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
  <Dialog
     id="addNotificationDialog"
     title="{i18n>PPOperationDetail.sendNotification}">
    <l:VerticalLayout
      class="sapUiContentPadding"
      width="100%">
      <l:content>
        <!-- Filter by date range -->
        <Label text="Material"/>
        <ComboBox
                    id="mov_101"
                    showSecondaryValues="true"
                    items="{
					             path: '/',
                       sorter: { path: 'id' }
			              }">
          <core:ListItem key="{id}" text="{desc}" additionalText="{move}"/>
        </ComboBox>
        <!-- Filter by plan name(s) -->
        <Label text="{i18n>PPOperationDetail.quantity}"/>
        <Input
        id="inputQuantity"
				class="sapUiSmallMarginBottom" />
        <Label text="{i18n>PPOperationDetail.batch}"/>
        <Input
        id="inputBatch"
				class="sapUiSmallMarginBottom" />
      </l:content>
    </l:VerticalLayout>

    <beginButton>
      <Button
       type="Accept"
         text="{i18n>ButtonSend}"
         icon="sap-icon://add-product"
         press="onConfirmDialogAddNotification"/>
    </beginButton>
    <endButton>
      <Button
         type="Reject"
         text="{i18n>ButtonClose}"
         icon="sap-icon://cancel"
         press="onCloseDialogAddNotification"/>
    </endButton>

  </Dialog>
</core:FragmentDefinition>
<mvc:View 
    controllerName="sap.ui.demo.webapp.controller.Reportes.Charts"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:c="sap.ui.demo.webapp.control"
    xmlns:dnd="sap.ui.core.dnd">
	<Page
        title="{i18n>chartsPageTitle}" >
    <content>
        <FlexBox
            id="dynamicFlex"
            justifyContent="SpaceAround" >
            <FlexBox
                direction="Column"
                alignItems="Center" >
                <c:ChartCard
                    id="chart01"
                    width="50rem"
                    height="30rem"
                    manifest="{manifest>/testa}"
                    class="sapUiResponsiveMargin" >
                    <c:dragDropConfig>
                        <dnd:DropInfo drop=".onDrop" />
                    </c:dragDropConfig>
                </c:ChartCard>
                <Button
                    text="Abrir"
                    press="lineChartCard" />
                <Button
                    id="closeChartsButton"
                    text="{i18n>ButtonClose}"
                    type="Reject"
                    press=".onNavBack"
                    class="sapUiResponsiveMargin" />
            </FlexBox>
            <FlexBox>
                <List class="sapUiResponsiveMargin" >
                    <items>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 1"
                                text="Graficar" />
                        </ObjectListItem>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 2"
                                text="Graficar" />
                        </ObjectListItem>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 3"
                                text="Graficar" />
                        </ObjectListItem>
                    </items>
                    <dragDropConfig>
                        <dnd:DragDropInfo sourceAggregation="items" targetAggregation="items" drop=".onDrop" />
                    </dragDropConfig>
                </List>
            </FlexBox>
        </FlexBox>
    </content>
	</Page>
</mvc:View>
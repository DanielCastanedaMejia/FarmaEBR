<mvc:View
	controllerName="sap.ui.demo.webapp.controller.Reportes.Charts"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:dnd2="sap.f.dnd"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{i18n>title}">
		<content>
		
		<FlexBox justifyContent="Center" class="sapUiSmallMargin" >
        <w:Card id="first" manifest="{/manifest}" />
			<f:GridContainer
				id="grid"
				items="{/}"
				snapToRow="true" >

				<f:dragDropConfig>
					<dnd:DragDropInfo
						sourceAggregation="items" />
					<dnd2:GridDropInfo
						targetAggregation="items"
						dropPosition="Between"
						dropLayout="Horizontal"
						drop=".onDrop" />
				</f:dragDropConfig>
                
				<f:layout>
					<f:GridContainerSettings
						columns="9"
						rowSize="6rem"
						columnSize="6rem"
						gap="0.5rem" />
				</f:layout>

				<f:Card>
					<f:layoutData>
						<f:GridContainerItemLayoutData minRows="{rows}" columns="{columns}" />
					</f:layoutData>

					<f:header>
						<card:Header title="{title}" />
					</f:header>

                    <f:content>
                        <w:Card manifest="{manifest}" />
                    </f:content>

				</f:Card>

			</f:GridContainer>
		</FlexBox>

		</content>
	</Page>
</mvc:View>
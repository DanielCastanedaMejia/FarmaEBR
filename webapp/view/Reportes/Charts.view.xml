<mvc:View 
    controllerName="sap.ui.demo.webapp.controller.Reportes.Charts"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:c="sap.ui.demo.webapp.control"
    xmlns:dnd="sap.ui.core.dnd">
	<Page
        title="{i18n>chartsPageTitle}" >
    <content>
        <FlexBox
            id="dynamicFlex"
            justifyContent="SpaceAround" >
            <FlexBox
                direction="Column"
                alignItems="Center" >
                <c:ChartCard
                    id="chart01"
                    manifest="{manifest>/manifest}"
                    class="sapUiResponsiveMargin" >
                    <c:dragDropConfig>
                        <dnd:DragDropInfo drop=".onDrop" />
                    </c:dragDropConfig>
                </c:ChartCard>
                <HBox justifyContent="Center">
                    <Button
                        text="Abrir"
                        press="onCreate" />
                    <Button
                        id="closeChartsButton"
                        text="{i18n>ButtonClose}"
                        type="Reject"
                        press=".onNavBack"
                        class="sapUiResponsiveMargin" />
                </HBox>
            </FlexBox>
            <FlexBox>
                <List class="sapUiResponsiveMargin" >
                    <items>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 1"
                                text="Graficar" />
                        </ObjectListItem>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 2"
                                text="Graficar" />
                        </ObjectListItem>
                        <ObjectListItem>
                            <ObjectAttribute
                                title="Stats 3"
                                text="Graficar" />
                        </ObjectListItem>
                    </items>
                    <dragDropConfig>
                        <dnd:DragDropInfo sourceAggregation="items" targetAggregation="items" drop=".onDrop" />
                    </dragDropConfig>
                </List>
            </FlexBox>
        </FlexBox>
    </content>
	</Page>
</mvc:View>
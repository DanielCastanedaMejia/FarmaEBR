<mvc:View xmlns:tnt="sap.tnt" xmlns:uxap="sap.uxap" xmlns:f="sap.f"
	controllerName="sap.ui.demo.webapp.controller.Reportes.generarEBR"
	xmlns:core="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
   	xmlns:form="sap.ui.layout.form"
    	xmlns:l="sap.ui.layout"
   	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
   	xmlns="sap.m">

	<NavContainer id="wizardNavContainer">
		<pages>
			<Page
				id="generarEBR"
				showHeader="false"
				backgroundDesign="Solid">
				<Toolbar
					class="toolbar_default">
					<Button 
						icon="sap-icon://nav-back" 
						type="Transparent" 
						class="sapUiMediumMarginBegin" 
						press="onNavBack">
					</Button>
					<Image 
						src="images/SAP_Logo.png">
					</Image>
					<core:Icon
						src="sap-icon://grid"
						class="toolbar_title sapUiSmallMarginBegin">
						<core:layoutData>
							<FlexItemData growFactor="1" />
						</core:layoutData>
					</core:Icon>
					<Label 
						labelFor="myColumn"
						class="toolbar_title"
						text="Estación de trabajo X"
						wrapping="true"/>
						<core:Icon 
							src="sap-icon://arrow-right" />
					<Label 
						labelFor="myColumn"
						class="toolbar_title"
						text="Generación de EBR"
						wrapping="true"/>
					<ToolbarSpacer/>
					<Label
						id ="username"
						text=""
						class="toolbar_color">
					</Label>
					<Button 
						icon="sap-icon://person-placeholder" 
						type="Transparent" 
						class="sapUiLargeMarginEnd">
					</Button>
				</Toolbar>
        <fb:FilterBar header="Órdenes"
                      reset="_onRouteMatched" search="PPOrders_view" clear="onClear" showRestoreButton="true" showClearButton="true" class="sapUiSizeCompact" showRestoreOnFB="true">

          <fb:filterItems>

            <fb:FilterItem name="A1" label="Planta" labelTooltip="Tooltip Example" mandatory="true">
              <fb:control>
                <ComboBox id="planta" selectedKey="1710">
                  <items>
                    <core:Item key="1710" text="Planta 1710"/>
                  </items>
                </ComboBox>
              </fb:control>
            </fb:FilterItem>

            <fb:FilterItem name="A" label="{i18n>StartDate}">
              <fb:control>
                <DatePicker
                  id="start_date"
                  valueFormat="dd-MM-yyyy"
                  displayFormat="dd-MM-yyyy"
                  enabled="false"
                  value="25-07-2019"/>
              </fb:control>
            </fb:FilterItem>

            <fb:FilterItem name="B" label="{i18n>EndDate}">
              <fb:control>
                <DatePicker
                  id="end_date"
                  valueFormat="dd-MM-yyyy"
                  displayFormat="dd-MM-yyyy"
                  enabled="false"
                  value="08-08-2019"/>
              </fb:control>
            </fb:FilterItem>
            
          </fb:filterItems>          

        </fb:FilterBar>
        <content>
          <Table
          sticky="InfoToolbar"
  id="PPOrders_list"
  class="sapUiResponsiveMargin"
  width="auto"
  items="{/ITEMS}"
     mode="SingleSelectMaster">
     <infoToolbar>
      <tnt:ToolHeader  >
        <tnt:content>
            <Button
              class="sapUiResponsiveMarginRightLeft"
              text="Generar EBR" 
              press="onShowEbr"
              type="Emphasized" />
        </tnt:content>
      </tnt:ToolHeader> 
    </infoToolbar>
            <columns>
              <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Label text="Orden"/>
              </Column>
              <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Label text="Codigo Material"/>
              </Column>
              <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Label text="Material"/>
              </Column>
              <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Label text="Planta"/>
              </Column>
              <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Label text="Fecha Inicio"/>
              </Column>
              <Column
                minScreenWidth="Tablet"
                demandPopin="false">
                <Label text="Fecha Fin"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="Tipo"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false"
                  visible="false">
                <Label text="Lote Prod"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="Lote"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="Cant Prog"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false"
                  id="ESTATUS_Col">
                <Label text="{i18n>column.status}"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="Estatus MII"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="USUARIO PRIM"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="USUARIO SEC"/>
              </Column>
              <Column
                  minScreenWidth="Tablet"
                  demandPopin="false">
                <Label text="AVANCE EBR"/>
              </Column>
            </columns>

            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{NUM_ORDEN}"/>
                  <Text text="{MATERIAL}"/>
                  <Text text="{DESC_MATERIAL}"/>
                  <Text text="{PLANTA}"/>
                  <ObjectStatus text="{
                    path: 'INICIO_PLANEADO',
                    formatter: '.formatter.date'
                  }"/>
                  <ObjectStatus text="{
                    path: 'FIN_PLANEADO',
                    formatter: '.formatter.date'
                  }"/>
                  <Text text="{TIPO}"/>
                  <Text text="{LOTE_INSPECCION}"/>
                  <Text text="{LOTE}"/>
                  <Text text="{CANTIDAD_PROGRAMADA}"/>
                  <ObjectStatus 
                    class="stat"
                    text="{
                            path: 'ESTATUS',
                            formatter: '.formatter.orderState'
                          }"
                    state="{
                            path: 'ESTATUS',
                            formatter: '.formatter.orderStateColor'
                    }"
                    />
                    <ObjectStatus 
                    class="stat"
                    text="{
                            path: 'ESTATUS_MII'
                          }"
                    state="{
                            path: 'ESTATUS_MII',
                            formatter: '.formatter.miiStateColor'
                    }"
                    />
                    <Text text="{USUARIO_PRIM}"/>
                    <Text text="{USUARIO_SEC}"/>
					<ObjectStatus
						class="stat"
						text="{
								path: 'EBR_STATUS',
								formatter: '.formatter.ebrStateText'
							}"
						state="{
							path: 'EBR_STATUS',
							formatter: '.formatter.ebrStateColor'
						}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </content>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>